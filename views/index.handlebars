<h1>Registration number list</h1>
<h3>Please enter registration number
  <span class="maxi">(max.length is 10)</span>
  from Cape Town (CA), Paarl (CJ), Stellenbosch(CL) or Kuilsriver (CF)</h3>
  <br>
<div class="content">
  <div class="left">
    <form action="/registration" method="POST">
    <h4>Enter registration here :</h4>
      <input
        type="text"
        name="regNo"
        class="regNo"
        placeholder=".e.g CA1243"
        maxlength="15"
        value=""
      />
      <div><button type="submit" class="addBtn">ADD</button></div>
      <p class="errorDisplay">{{theError}}</p>
      <script>

        setTimeout(function () {
        document.querySelector('.errorDisplay').style.display = 'none'; },
        3500);
      </script>
      <p class="regErr">
        {{regError}}
      </p>
      <script>

        setTimeout(function () { document.querySelector('.regErr').style.display
        = 'none'; }, 3500);
      </script>
      <div class="messageText">
      </div>
    </form>

    <div class="dropdown">
      <h4>Filter the towns registrations: </h4>
      <form action="/selected" method="POST">
        <select name="towns" id="towns">

          <option value="1">Cape Town</option>
          <option value="4">Kuils River</option>
          <option value="3">Stellenbosch</option>
          <option value="2">Paarl</option>
        </select>
        <div> <button type="submit" class="two">SHOW</button></div>
      </form>
      <span class="floatAll">
        <form action="/all" method="POST">
          <button type="submit" class="two">SHOW ALL</button></form>
      </span>

    </div>

  </div>
  <div class="right">
    <h4>Registrations</h4>
    <div class="display">
      {{#each theRegistration}}
        <p class="displayReg">{{this}}</p>
      {{/each}}
    </div>
    <h2 class="success" style="color: green;">{{resetMessage}}</h2>

    <script>

      setTimeout(function () { document.querySelector('.success').style.display
      = 'none'; }, 3500);
    </script>
    <h2 class="noTown">{{theTownError}}</h2>
    <script>

      setTimeout(function () { document.querySelector('.noTown').style.display =
      'none'; }, 3500);
    </script>
    <div>
      <form action="/reset" method="POST">
        <button type="submit">RESET</button>
      </form>

    </div>
  </div>
</div>